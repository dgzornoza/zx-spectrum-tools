<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <AssemblyName>AsmInstructionSetGenerator</AssemblyName>
    <RootNamespace>AsmInstructionSetGenerator</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\AssemblerZ80.pdf" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\AssemblerZ80.pdf" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\.editorconfig" Link=".editorconfig" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="itext7" Version="7.1.14" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.118">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
